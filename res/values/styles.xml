<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <!-- TextViewStyles -->
    <style name="TextViewStyleLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">30sp</item>
	</style>

    <!-- Button Styles -->
    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
         <item name="android:textSize">22sp</item>
    </style>

    <style name="CustomButton.Blue">
       <item name="android:background">@drawable/ic_orange_button</item>
    </style>

    <style name="CustomButton.Blue.Gradient">
       <item name="android:background">@drawable/gradient_btn_blue</item>
    </style>
</resources>