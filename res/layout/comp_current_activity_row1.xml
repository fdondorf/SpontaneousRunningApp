<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/rowOne"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/white">

    <TextView
        android:id="@+id/gpsSignal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:text="GPS"/>
    
    <TextView
        android:id="@+id/currentAveragePerUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        style="@android:style/TextAppearance.Large" />

    <View android:id="@+id/divider2"
		android:layout_width="1dp"
		android:layout_height="80dp"
		android:background="@android:color/darker_gray"
		android:layout_toLeftOf="@id/currentAveragePerUnit" />
    
    <Chronometer android:id="@+id/chronometer"
    	android:layout_width="match_parent"
     	android:layout_height="wrap_content"
     	android:paddingBottom="5dip"
     	android:paddingTop="5dip"     	
		android:gravity="center_vertical|center_horizontal"
		android:layout_toLeftOf="@id/divider2"
     	style="@android:style/TextAppearance.Large" />
    
    <View android:id="@+id/divider1"
		android:layout_width="1dp"
		android:layout_height="80dp"
		android:background="@android:color/darker_gray"
		android:layout_toLeftOf="@id/chronometer"
		/>
       
</RelativeLayout>